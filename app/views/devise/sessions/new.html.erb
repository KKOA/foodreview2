<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label :email %>
    </div>
    <div class='col-sm-10'>
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label :password %>
    </div>
    <div class='col-sm-10'>
      <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class='form-group'>
      <div class='col-sm-offset-2 col-sm-10'>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end -%>
  <div class='form-group'>
    <div class='col-sm-offset-2 col-sm-10'>
      <%= link_to root_path, class:'btn btn-default btn-lg pull-left' do %>
          Cancel <i class='glyphicon glyphicon-remove'></i>
      <% end %>
      <%= f.button class: 'btn btn-primary btn-lg pull-right', id: 'commit' do %>
         Log In <i class='glyphicon glyphicon-save'></i>
     <% end %>
    </div>
  </div>
<% end %>
<div class="row">
  <div class='col-sm-offset-2 col-sm-10 shared-links'>
    <%= render "devise/shared/links" %>
  </div>
</div>
