<h2 class='text-center'>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {class: "form-horizontal", role: "form"}) do |f| %>
  <%= devise_error_messages! %>

  <div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label :first_name do %>
          First name <span class="required">*</span>
      <% end %>
    </div>
    <div class='col-sm-10'>
      <%= f.text_field :first_name, class: 'form-control', placeholder: 'E.g. Sam', autofocus: true %>
    </div>
  </div>


  <div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label :last_name  do %>
          Last name <span class="required">*</span>
      <% end %>
    </div>
    <div class='col-sm-10'>
      <%= f.text_field :last_name, class: 'form-control', placeholder: 'E.g. John', autofocus: true %>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label :username  do %>
          Username <span class="required">*</span>
      <% end %>
    </div>
    <div class='col-sm-10'>
      <%= f.text_field  :username, class: 'form-control', placeholder: 'E.g. ghost', autofocus: true %>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label :tel   do %>
          Telephone <span class="required">*</span>
      <% end %>
    </div>
    <div class='col-sm-10'>
      <%= f.text_field  :tel, class: 'form-control', placeholder: 'E.g. 07975274081', autofocus: true %>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label :email do %>
          Email <span class="required">*</span>
      <% end %>
    </div>
    <div class='col-sm-10'>
      <%= f.email_field :email, class: 'form-control', placeholder: 'E.g. 07975274081', autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label :password  do %>
          Password <span class="required">*</span>
      <% end %>
    <% if @minimum_password_length %>
    <br><em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    </div>
    <div class='col-sm-10'>
      <%= f.password_field :password, class: 'form-control', placeholder: 'E.g. 07975274081', autofocus: true, autocomplete: "off" %>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-sm-2'>
    <%= f.label :password_confirmation  do %>
        Password Confirmation<span class="required">*</span>
    <% end %>
  </div>
    <div class='col-sm-10'>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'E.g. 07975274081', autofocus: true, autocomplete: "off" %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-sm-offset-2 col-sm-10'>
      <%= link_to root_path, class:'btn btn-default btn-lg pull-left' do %>
          Cancel <i class='glyphicon glyphicon-remove'></i>
      <% end %>
      <%= f.button class: 'btn btn-primary btn-lg pull-right', id: 'commit' do %>
         Create Account <i class='glyphicon glyphicon-save'></i>
     <% end %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class='col-sm-offset-2 col-sm-10 shared-links'>
    <%= render "devise/shared/links" %>
  </div>
</div>
