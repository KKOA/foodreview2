<%- if controller_name != 'sessions' %>
  <%= link_to new_session_path(resource_name), class: 'btn btn-primary btn-lg' do %>
      Log in
  <% end %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to new_registration_path(resource_name), class: 'btn btn-primary btn-lg' do %>
      Register
  <% end %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to new_password_path(resource_name), class: 'btn btn-primary btn-lg' do %>
      Forgot your password?
  <% end %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to new_confirmation_path(resource_name), class: 'btn btn-primary btn-lg' do %>
      Didn't receive confirmation instructions?
  <% end %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to new_confirmation_path(resource_name), class: 'btn btn-primary btn-lg' do %>
      Didn't receive confirmation instructions?
  <% end %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider), class: 'btn btn-primary btn-lg' do %>
        <%= "Sign in with #{OmniAuth::Utils.camelize(provider)}" %>
    <% end %>
  <% end -%>
<% end -%>
