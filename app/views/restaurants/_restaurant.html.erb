<% obj.each do |restaurant|%>
<li id="restaurant<%= restaurant.id %>" class="col-xs-offset-1 col-xs-10 col-sm-5 col-sm-center-offset-1 col-lg-3 restaurant">
    <div class="holder">
        <div class="prop-info">
            <h3 class="prop-title text-center">
                <%= link_to restaurant_path(restaurant) do %>
                    <%= restaurant.name %>
                <% end %>
            </h3>
            <ul class='more-info'>
                <li class="clearfix">
                    <span class="pull-left field-name">Category:</span>
                    <span class="qty pull-right">
                      <%= render 'category', categories: restaurant.categories %>
                    </span>
                </li>
                <li class="clearfix">
                    <span class="pull-left field-name">Avg Rating:</span> <span class="qty pull-right">4</span>
                </li>
                <li class="clearfix ">
                    <span class="pull-left field-name">Location:</span> <span class="qty pull-right"><%= restaurant.full_address %></span>
                </li>
                <li class="clearfix">
                    <span class="pull-left field-name">Description:</span> <span class="qty pull-right"><%= truncate(restaurant.description, length: 100) { link_to "<b>Continue</b>".html_safe, restaurant_path(restaurant) } %></span>
                </li>
            </ul>
        </div>
    </div>
</li>
<% end %>
